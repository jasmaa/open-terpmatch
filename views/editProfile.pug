extends base.pug

block content
  .card.my-5
    .card-body

      if errorMessage
        .alert.alert-danger #{errorMessage}

      form(action='/editProfile', method='POST')
        .form-group
          label Email (optional)
          input.form-control(type='email' name='email' value=user.email placeholder="Enter email address")
        .form-group
          label Phone (optional)
          input.form-control(type="tel", name="phone", pattern="\\d{3}-\\d{3}-\\d{4}", value=user.phone, placeholder="XXX-XXX-XXXX")
        .text-right
          input.btn.btn-outline-primary.mr-3(type='submit' value='Save')
          a.btn.btn-outline-secondary(href='/profile') Cancel