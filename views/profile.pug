extends base.pug

block content
  .card.my-5
    .card-body
      .d-flex.flex-column.align-items-end
        a.btn.icon-btn(href="/editProfile")
          i.fa.fa-pencil
      .d-flex.flex-column.align-items-center
        img.profile-img(src=`https://www.gravatar.com/avatar/${hashProfile(user.email)}?s=200&d=mp`)
        h1.my-4 #{user.name}
        .container.my-4(style={"font-size": "1.2em"})
          .row
            strong.col-sm-4 UID:
            span.col-8 #{user.uid}
          .row
            strong.col-sm-4 Email:
            .col-8
              if user.email
                span #{user.email}
              else
                em No email provided